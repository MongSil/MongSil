<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_container"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="@drawable/sign_up_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpActivity">

    <ImageView
        android:id="@+id/img_splash_title_text"
        android:src="@drawable/splash_title_here"
        android:paddingLeft="5dp"
        android:paddingBottom="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/img_splash_title"
        android:src="@drawable/splash_title_mongsil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_splash_title_text"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edit_name"
        android:textSize="15sp"
        android:hint="@string/name"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:paddingBottom="8dp"
        android:background="@null"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:singleLine="true"
        android:maxLength="10"
        android:layout_marginLeft="115dp"
        android:layout_marginRight="115dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/underline_name"
        android:background="@android:color/white"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/edit_name"
        android:layout_alignStart="@+id/edit_name"
        android:layout_below="@+id/edit_name"
        android:layout_alignRight="@+id/edit_name"
        android:layout_alignEnd="@+id/edit_name" />
    <TextView
        android:id="@+id/text_name_fail"
        android:text="@string/name_fail"
        android:textSize="10sp"
        android:textColor="@color/color_fail"
        android:visibility="invisible"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_alignLeft="@+id/edit_name"
        android:layout_alignStart="@+id/edit_name" />

    <TextView
        android:id="@+id/text_location"
        android:text="@string/location"
        android:textSize="15sp"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:paddingBottom="8dp"
        android:layout_marginTop="51dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_alignLeft="@+id/underline_name"
        android:layout_alignStart="@+id/underline_name"
        android:layout_alignRight="@+id/underline_name"
        android:layout_alignEnd="@+id/underline_name" />

    <View
        android:id="@+id/underline_location"
        android:background="@android:color/white"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignRight="@+id/edit_name"
        android:layout_alignEnd="@+id/edit_name"
        android:layout_below="@+id/text_location"
        android:layout_alignLeft="@+id/edit_name"
        android:layout_alignStart="@+id/edit_name" />

    <TextView
        android:id="@+id/text_location_fail"
        android:text="@string/location_fail"
        android:textSize="10sp"
        android:textColor="@color/color_fail"
        android:visibility="invisible"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_location"
        android:layout_alignLeft="@+id/text_location"
        android:layout_alignStart="@+id/text_location" />

    <ImageView
        android:id="@+id/img_signup_done"
        android:src="@drawable/btn_done"
        android:visibility="gone"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp" />
</RelativeLayout>