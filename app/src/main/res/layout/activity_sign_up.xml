<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/dark_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/img_splash_title_text"
        android:src="@drawable/splash_title_here"
        android:paddingLeft="5dp"
        android:paddingBottom="9dp"
        android:layout_marginTop="85dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/img_splash_title"
        android:src="@drawable/splash_title_mongsil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_splash_title_text"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/signup_name_container"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <EditText
            android:id="@+id/edit_name"
            android:text="@string/name"
            android:textSize="15sp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:paddingLeft="20dp"
            android:paddingBottom="3dp"
            android:layout_gravity="bottom"
            android:background="@null"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true"
            android:maxLength="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/underline_name"
            android:background="@color/light_gray"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/signup_location_container"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/signup_name_container"
        android:layout_alignLeft="@+id/signup_name_container"
        android:layout_alignStart="@+id/signup_name_container"
        android:layout_alignRight="@+id/signup_name_container"
        android:layout_alignEnd="@+id/signup_name_container"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <TextView
            android:id="@+id/text_location"
            android:text="@string/location"
            android:textSize="15sp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:paddingLeft="20dp"
            android:paddingBottom="3dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/underline_location"
            android:background="@color/light_gray"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/img_signup_done"
        android:src="@drawable/btn_done"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />
</RelativeLayout>