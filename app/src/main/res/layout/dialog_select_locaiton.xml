<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/invisible"
        android:layout_width="wrap_content"
        android:layout_height="45dp" />
    <ImageView
        android:src="@drawable/search_box_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/search_container"
        android:orientation="horizontal"
        android:background="@color/little_dark_gray"
        android:gravity="center"
        android:clickable="true"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="22dp">
        <ImageView
            android:id="@+id/img_search"
            android:src="@drawable/search_box_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/text_empty_search"
            android:text="@string/empty_search"
            android:textSize="12dp"
            android:textColor="@color/dark_gray"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_search"
            android:layout_toEndOf="@+id/img_search" />
        <EditText
            android:id="@+id/edit_search"
            android:textColor="@color/dark_gray"
            android:background="@null"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_weight="10"/>
        <ImageView
            android:id="@+id/img_search_cancel"
            android:src="@drawable/search_box_in_close"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:background="@color/little_dark_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <!-- layout_search_location_item.xml -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>