<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_post_item"
    android:layout_marginBottom="9dp"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_post_profile"
                android:src="@drawable/none_post_profile"
                android:layout_gravity="center"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/text_post_name"
                android:text="@string/name"
                android:textSize="9sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_post_profile" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/post_content_container"
            android:gravity="center"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_post_content"
                android:text="asdfasfasdf"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/text_post_time"
                android:layout_toLeftOf="@+id/img_next"
                android:layout_toStartOf="@+id/img_next" />

            <ImageView
                android:id="@+id/img_next"
                android:background="@drawable/triangle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_post_time"
                android:text="ㅇㅇㅇ"
                android:textSize="9sp"
                android:gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/text_post_content"
                android:layout_alignEnd="@+id/text_post_content" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>