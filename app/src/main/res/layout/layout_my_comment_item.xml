<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_white_radius"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <ImageView
        android:id="@+id/img_post_icon"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/text_post_content"
        android:text="둠칫 둠칫 두둠칫"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_post_icon"
        android:layout_toRightOf="@+id/img_post_icon"
        android:layout_toEndOf="@+id/img_post_icon" />
    <TextView
        android:id="@+id/text_my_comment_content"
        android:text="댓글 내용이야!!"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_post_content"
        android:layout_toRightOf="@+id/img_post_icon"
        android:layout_toEndOf="@+id/img_post_icon" />
    <TextView
        android:id="@+id/text_my_comment_time"
        android:text="@string/time"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/text_post_content"
        android:layout_alignStart="@+id/text_post_content" />
</RelativeLayout>