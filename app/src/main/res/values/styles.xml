<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="ToolBar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:background">@color/invisible</item>
    </style>
    <style name="ToolBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/invisible</item>
    </style>

    <style name="LocationDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/invisible</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomDialogAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_bottom</item>
    </style>

    <style name="LocationDialogAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/small_to_big_interpolator</item>
        <item name="android:windowExitAnimation">@anim/big_to_small_interpolator</item>
    </style>

    <style name="SignupSelectLocationDialogBackground" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SelectedTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <color name="color_control_highlight">#d2d2d2</color>
</resources>
